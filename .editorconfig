# EditorConfig
# http://editorconfig.org

# Root configuration
root = true

# --- TABLE OF CONTENTS --------------------------------------------------------
#
#  01. Global
#  02. Compiled Languages
#  03. Interpreted Languages
#  04. Markup Languages
#  05. Style Sheets
#  06. Configuration Files
#  07. Package Managers
#  08. Task Runners
#  09. Continuous Integration
#  10. Build Tools
#  11. Shell Scripts
#  12. Web Applications
#  13. Web Frameworks
#  14. Miscellaneous


# --- 01. GLOBAL ---------------------------------------------------------------

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true


# --- 02. COMPILED LANGUAGES ---------------------------------------------------

# C++
# https://google.github.io/styleguide/cppguide.html
[**.{cpp,hpp}]
indent_size = 2
indent_style = space

# C Sharp
# https://msdn.microsoft.com/en-us/library/ff926074.aspx
[**.cs]
indent_size = 4
indent_style = space

# D
[**.d]
indent_size = 4
indent_style = space

# Erlang
[**.[erl,hrl]]
indent_size = 2
indent_style = space

# Go
[**.go]
indent_size = 4
indent_style = space

# Java
# https://google.github.io/styleguide/javaguide.html
[**.{java,class}]
indent_size = 2
indent_style = space

# Objective-C
# https://google.github.io/styleguide/objcguide.xml
[**.{C,h,m,mm}]
indent_size = 2
indent_style = space

# Rust
[**.{rs,rlib}]
indent_size = 4
indent_style = space

# Scala
[**.{sc,scala}]
indent_size = 2
indent_style = space

# VB.NET
[**.vb]
indent_size = 4
indent_style = space


# --- 03. INTERPRETED LANGUAGES-------------------------------------------------

# ActionScript
[**.as]
indent_size = 4
indent_style = space

# ASP
[**.asp]
indent_size = 4
indent_style = space

# ASP.NET
[**.aspx]
indent_size = 4
indent_style = space

# CoffeeScript
[**.coffee]
indent_size = 2
indent_style = space

# ColdFusion/CFML
[**.{cfc,cfm,lucee}]

indent_style = space

# Haskell
[**.{hs,lhs}]
indent_size = 4
indent_style = space

# Java Server Pages
[**.jsp]
indent_size = 4
indent_style = space

# JavaScript
# https://google.github.io/styleguide/javascriptguide.xml
[**.{js,json}]
indent_size = 2
indent_style = space

# Lua
# http://lua-users.org/wiki/LuaStyleGuide
[**.lua]
indent_size = 2
indent_style = space

# Perl
# http://perldoc.perl.org/perlstyle.html
[**.{pl,pm,pod,t}]
indent_size = 4
indent_style = space

# PHP
# http://www.php-fig.org/psr/
[**.{php,phtml,phps}]
indent_size = 4
indent_style = space

# Python
# https://www.python.org/dev/peps/pep-0008/
[**.py]
indent_size = 4
indent_style = space

# Ruby
# https://github.com/styleguide/ruby
[**.{rb,rbw,erb,rhtml}]
indent_size = 2
indent_style = space

#VBScript
[**.vbs]
indent_size = 2
indent_style = space


# --- 04. MARKUP LANGUAGES------------------------------------------------------

# HAML
[**.haml]
indent_size = 2
indent_style = space

# HTML
# https://google.github.io/styleguide/htmlcssguide.xml
